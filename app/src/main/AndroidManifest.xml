<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joaquin.ad340" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tutorial1"
            android:label="@string/title_activity_tutorial1"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.joaquin.ad340.MainActivity" />
        </activity>
        <activity
            android:name=".Tutorial1a"
            android:label="@string/title_activity_tutorial1a"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.joaquin.ad340.Tutorial1a" />
>
        </activity>
        <activity
            android:name=".Tutorial4a"
            android:label="@string/title_activity_tutorial4a"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tutorial4b"
            android:label="@string/title_activity_tutorial4b"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tutorial5a"
            android:label="@string/title_activity_tutorial5a"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tutorial6a"
            android:label="@string/title_activity_tutorial6a"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tutorial6b"
            android:label="@string/title_activity_tutorial6b"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Tutorial7a"
            android:label="@string/title_activity_tutorial7a"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FlipCardActivity"
            android:label="@string/title_activity_flip_card"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".OpenGLES20Activity"
            android:label="@string/title_activity_open_gles20" >
        </activity>
    </application>

</manifest>
